<h1>Comments</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Owner</th>
            <th scope="col">Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each comments}}
        <tr>
            <td>{{id}}</td>
            <td>{{user.username}}</td>
            <td>{{generateDate date 'DD MMMM YYYY'}}</td>
            <td>
                <form action="/user/dashboard/commentindex/{{id}}?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>