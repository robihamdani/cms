<h1> Categories </h1>
<div class="row">
    <div class="col-sm-4">
        <form action="/user/dashboard/category" method="POST" enctype="application/x-www-form-urlencoded">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" placeholder="Enter Title" class="form-control">
            </div>
            <button class="btn btn-primary">Create</button>
        </form>
    </div>

    <div class="col-sm-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                {{#each category}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{generateDate date 'DD MMMM YYYY'}}</td>
                    <td><a href="/user/dashboard/category/edit/{{id}}" class="btn btn-success">Update</a></td>
                    <td>
                        <form action="/user/dashboard/category/{{id}}?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</div>