<h1>Edit Post</h1>

<form action="/user/dashboard/postindex/edit/{{post.id}}?_method=PUT" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" value="{{post.title}} "></input>
    </div>

    <div class="form-group">
        <label for="file">File Upload</label>
        <input type="file" name="file" class="form-control">
    </div>

    <div class="form-group">
        <label for="category">Category</label>
        <select name="category" id="category" class="form-control">
            {{#each category}}
            <option value="{{id}}">{{name}}</option>
            {{/each}}
        </select>
    </div>

    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
            {{#select post.status}}
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
            {{/select}}
        </select>
    </div>



    <div class="form-check">
        <label for="allowComments" class="form-check-label">
            <input name="allowComments" {{#if post.allowComments}} checked="checked" {{/if}} type="checkbox"
                class="form-check-input" id="allowComments">
            Allow Comments
        </label>
    </div>


    <div class="form-group">
        <label for="body">Body</label>
        <textarea name="body" cols="30" rows="10" class="form-control" id="body"
            placeholder="Enter Description">{{post.body}}</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Sumbit</button>
</form>